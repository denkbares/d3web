<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.uniwue.d3web</groupId>
	<artifactId>d3web</artifactId>
	<packaging>pom</packaging>
	<name>d3web</name>
	<version>0-SNAPSHOT</version>
	<url>http://www.d3web.de/</url>
	<issueManagement>
		<system>Trac</system>
		<url>http://knowwetrac.informatik.uni-wuerzburg.de/</url>
	</issueManagement>
	<ciManagement>
		<system>Continuum</system>
		<url>http://win6154.informatik.uni-wuerzburg.de:8080/</url>
	</ciManagement>
	<licenses>
		<license>
			<name>GNU Lesser General Public License, version 3</name>
			<url>http://www.gnu.org/licenses/lgpl.txt</url>
		</license>
	</licenses>
	<build>
		<defaultGoal>package</defaultGoal>
		<plugins>
			<!-- Set Java 1.6 as source and target -->
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<!-- Ignore test failures -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<testFailureIgnore>true</testFailureIgnore>
				</configuration>
			</plugin>

			<!-- Create a JAR with all our dependencies -->
			<!--
				<plugin> <artifactId>maven-assembly-plugin</artifactId>
				<configuration> <descriptors> <descriptor>assembly.xml</descriptor>
				</descriptors> </configuration> </plugin>
			-->

		</plugins>
		<extensions>
		</extensions>

	</build>
	<repositories>
		<repository>
			<id>infoVI-public</id>
			<url>http://win6154.informatik.uni-wuerzburg.de:8080/nexus/content/groups/public/</url>
		</repository>
		<repository>
			<id>snapshots</id>
			<url>http://win6154.informatik.uni-wuerzburg.de:8080/nexus/content/repositories/snapshots/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>ignore</checksumPolicy>
			</snapshots>
		</repository>
	</repositories>

	<distributionManagement>
		<snapshotRepository>
			<id>snapshots</id>
			<name>d3web Snapshots</name>
			<url>http://win6154.informatik.uni-wuerzburg.de:8080/nexus/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

	<developers>
		<developer>
			<id>joba</id>
			<name>Joachim Baumeister</name>
			<email>joba@uni-wuerzburg.de</email>
			<timezone>CET</timezone>
			<roles>
				<role>Mentor</role>
			</roles>
		</developer>
	</developers>
	<organization>
		<name>Universität Würzburg</name>
		<url>http://uni-wuerzburg.de/</url>
	</organization>
	<modules>
		<module>d3web-Kernel</module>
		<module>d3web-Persistence</module>
		<module>d3web-Config</module>
		<module>d3web-Persistence-MMInfo</module>
		<module>d3web-CaseRepository</module>
		<module>d3web-Utilities</module>
		<module>d3web-SharedKnowledge</module>
		<module>d3web-CompareCase</module>
		<module>d3web-CompareCase-Facade</module>
		<module>d3web-SCM</module>
		<module>d3web-ExplainTree</module>
		<module>d3web-Verbalizer</module>
		<!--
			<module>../d3web-Report</module>
			<module>../d3web-Utilities-Swing</module>
			<module>../d3web-MMExtensions</module>
			<module>../d3web-KnOfficeParser</module>
			<module>../d3web-TextParser</module> <module>../d3web-TiRex</module>
			putt <module>../d3web-KnowledgeExporter</module>
		-->
	</modules>
	<dependencies>
	</dependencies>
</project>
